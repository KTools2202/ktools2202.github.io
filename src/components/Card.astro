---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<li class="list-none flex p-1 bg-[#23262d] rounded-lg transition-all duration-600 ease-[cubic-bezier(0.22,1,0.36,1)] shadow-inner hover:bg-gradient-to-r hover:from-accent-light hover:to-accent-dark">
	<a href={href} class="w-full no-underline leading-6 p-[calc(1.5rem-1px)] rounded-lg text-white bg-[#23262d] opacity-80 hover:bg-indigo-300">
		<h2 class="m-0 text-xl transition-colors text-center duration-600 ease-[cubic-bezier(0.22,1,0.36,1)]">
			{title}
			<span>&rarr;</span>
		</h2>
		<p class="mt-2 mb-0 text-center">
			{body}
		</p>
	</a>
</li>
